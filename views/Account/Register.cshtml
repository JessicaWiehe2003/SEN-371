using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Project_4_CampusLearn.Views.Account
{
    class Register
    {
        @model CampusLearn.ViewModels.RegisterVm
        @{ Layout = "_Layout"; }
        <h2>Register</h2>
        <form method="post" class="col-12 col-md-6">
            <div class="mb-3">
                <label>Full name</label>
                <input asp-for="FullName" class="form-control" />
            </div>
            <div class="mb-3">
                <label>Email</label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="mb-3">
                <label>Password</label>
                <input asp-for="Password" class="form-control" type="password" />
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="IsTutor" />
                <label class="form-check-label">I am a Tutor</label>
            </div>
            <button class="btn btn-success">Create account</button>
        </form>
    }
}
